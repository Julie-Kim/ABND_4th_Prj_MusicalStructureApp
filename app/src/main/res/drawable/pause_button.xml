<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <stroke
                android:width="@dimen/play_control_icon_stroke_width"
                android:color="@color/play_control_icon_stroke_color" />
        </shape>
    </item>

    <item
        android:width="@dimen/play_button_size"
        android:height="@dimen/play_button_size"
        android:bottom="@dimen/play_play_icon_top_bottom"
        android:end="@dimen/play_play_icon_top_bottom"
        android:start="@dimen/play_play_icon_top_bottom"
        android:top="@dimen/play_play_icon_top_bottom">
        <bitmap android:src="@drawable/pause_icon" />
    </item>

</layer-list>