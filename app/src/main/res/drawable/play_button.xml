<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_enabled="false">
    <layer-list>
        <item>
            <shape android:shape="oval">
                <stroke
                    android:width="@dimen/play_control_icon_stroke_width"
                    android:color="@color/play_control_icon_disabled_tint_color" />
            </shape>
        </item>

        <item
            android:width="@dimen/play_button_size"
            android:height="@dimen/play_button_size"
            android:bottom="@dimen/play_play_icon_top_bottom"
            android:start="@dimen/play_play_icon_start"
            android:top="@dimen/play_play_icon_top_bottom">
            <bitmap
                android:src="@drawable/play_icon"
                android:tint="@color/play_control_icon_disabled_tint_color"/>
        </item>
    </layer-list>
</item>

<item>
    <layer-list>
        <item>
            <shape android:shape="oval">
                <stroke
                    android:width="@dimen/play_control_icon_stroke_width"
                    android:color="@color/play_control_icon_tint_color" />
            </shape>
        </item>

        <item
            android:width="@dimen/play_button_size"
            android:height="@dimen/play_button_size"
            android:bottom="@dimen/play_play_icon_top_bottom"
            android:start="@dimen/play_play_icon_start"
            android:top="@dimen/play_play_icon_top_bottom">
            <bitmap
                android:src="@drawable/play_icon"
                android:tint="@color/play_control_icon_tint_color"/>
        </item>
    </layer-list>
</item>

</selector>