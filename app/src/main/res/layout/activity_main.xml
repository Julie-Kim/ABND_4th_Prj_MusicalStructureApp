<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_default_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/category_my_music"
            android:textAllCaps="true" />

        <include layout="@layout/horizontal_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/my_music"
                style="@style/CategoryStyle"
                android:background="@drawable/my_music_background"
                android:gravity="center"
                android:text="@string/category_my_music" />

        </LinearLayout>

        <TextView
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/list_item_padding"
            android:text="@string/category_recommended_music"
            android:textAllCaps="true" />

        <include layout="@layout/horizontal_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kpop_music"
                style="@style/CategoryStyle"
                android:background="@drawable/kpop_music_background"
                android:text="@string/category_kpop_music" />

            <TextView
                android:id="@+id/pop_rock_music"
                style="@style/CategoryStyle"
                android:background="@drawable/pop_rock_music_background"
                android:text="@string/category_pop_rock_music" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/soundtrack_music"
                style="@style/CategoryStyle"
                android:background="@drawable/soundtrack_music_background"
                android:text="@string/category_soundtrack_music" />

            <TextView
                android:id="@+id/classic_music"
                style="@style/CategoryStyle"
                android:background="@drawable/classic_music_background"
                android:text="@string/category_classic_music" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_age_music"
                style="@style/CategoryStyle"
                android:background="@drawable/new_age_music_background"
                android:text="@string/category_new_age_music" />

            <TextView
                android:id="@+id/disney_music"
                style="@style/CategoryStyle"
                android:background="@drawable/disney_music_background"
                android:text="@string/category_disney_music"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>